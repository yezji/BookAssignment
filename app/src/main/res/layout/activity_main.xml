<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    >

    <FrameLayout
        android:id="@+id/fl_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_search_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:defaultQueryHint="@string/search_main_hint"
            app:searchIcon="@drawable/ic_search_24"
            app:iconifiedByDefault="false"
            android:background="@drawable/shape_underline_gray20"
            />
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_normal_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            tools:visibility="visible"
            app:contentInsetStart="20dp"
            app:contentInsetEnd="20dp"
            >
            <ImageButton
                android:id="@+id/ib_normal_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_24"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_gravity="start"
                android:padding="2dp"
                />
            <TextView
                android:id="@+id/tv_normal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start|center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="20dp"
                tools:text="titletitletitle"
                android:visibility="gone"
                tools:visibility="visible"
                android:paddingStart="12dp"
                />
            <ImageButton
                android:id="@+id/ib_normal_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_empty_24"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_gravity="end"
                android:visibility="visible"
                tools:visibility="visible"
                />
        </androidx.appcompat.widget.Toolbar>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fl_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ProgressBar
        android:id="@+id/progress_bar_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/primary"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>