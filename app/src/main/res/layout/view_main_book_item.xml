<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/iv_main_book"
            android:layout_width="56dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="3:4"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_main_book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="마흔에게마흔에게마흔에게마흔에게마흔에게"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_main_book"
            app:layout_constraintEnd_toStartOf="@id/tv_main_book_published_date"
            />
        <TextView
            android:id="@+id/tv_main_book_published_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="1"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_main_book_title"
            app:layout_constraintEnd_toStartOf="@id/ib_main_like"
            />
        <TextView
            android:id="@+id/tv_main_book_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_main_book_title"
            app:layout_constraintStart_toStartOf="@id/tv_main_book_title"
            app:layout_constraintEnd_toStartOf="@id/ib_main_like"
            />
        <TextView
            android:id="@+id/tv_main_book_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="한줄로 책 설명을 줄이세요한줄로 책 설명을 줄이세요한줄로 책 설명을 줄이세요"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_main_book_description"
            app:layout_constraintStart_toStartOf="@id/tv_main_book_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ib_main_like"
            />
        <ImageButton
            android:id="@+id/ib_main_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:enabled="false"
            android:background="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>